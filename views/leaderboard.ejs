      body {
        font-family: Arial, Helvetica, sans-serif;
      }

      #leaderboard {
        background: beige;
        width: 20%;
        padding-top: 4px;
        padding: 10px;
        border-radius: 10px;
        box-shadow: 5px 10px rgba(0, 0, 0, 0.1);
        margin-left: 50px;
      }

      #leaderboard h2 {
        text-align: center;
      }

      .players {
        padding: 10px;
        border-radius: 5px;
        border: 1px;
        margin: 10px;
        justify-content: left;
        background: whitesmoke;
        box-shadow: 5px 7px rgba(0, 0, 0, 0.08);
      }

      .players:hover {
        cursor: pointer;
        border-radius: 5px; /* Add rounded corners */
        background-color: whitesmoke; /* Light background color */
        border: 1px solid #ddd; /* Optional border */
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.5); /* Subtle shadow */
        -webkit-transition-duration: 0.3s;
        transition-duration: 0.3s;
        -webkit-transform: scale(1.2);
        transform: scale(1.2); /* Slight scale on hover */
      }
      @import url("https://fonts.googleapis.com/css?family=Roboto:400,500,700&subset=cyrillic");
 .live-icon {
	 display: inline-block;
	 position: relative;
	 top: calc(50% - 5px);
	 background-color: red;
	 width: 10px;
	 height: 10px;
	 margin-left: 20px;
	 border: 1px solid rgba(0, 0, 0, 0.1);
	 border-radius: 50%;
	 z-index: 1;
}
 .live-icon:before {
	 content: "";
	 display: block;
	 position: absolute;
	 background-color: rgba(255, 0, 0, 0.6);
	 width: 100%;
	 height: 100%;
	 border-radius: 50%;
	 animation: live 2s ease-in-out infinite;
	 z-index: -1;
}
 @keyframes live {
	 0% {
		 transform: scale(1, 1);
	}
	 100% {
		 transform: scale(3.5, 3.5);
		 background-color: rgba(255, 0, 0, 0);
	}
}

 .toolbar {
	 display: flex;
	 flex-direction: row;
	 align-items: center;
	 justify-content: center;
	 height: 100vh;
	 width: 100vw;
}
 .btn {
	 display: block;
	 font-weight: 700;
	 position: relative;
	 padding: 13px 25px;
	 background-color: rgba(255, 255, 255, 0.9);
	 text-decoration: none;
	 color: #333;
	 border-radius: 50px;
	 border: 1px solid white;
	 box-shadow: 0px 2px 0px #02679e;
	 transition: all 0.2s;
	 z-index: 1;
	 outline: none;
	 -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
}
 
 .btn:hover > span:before {
	 animation: none;
}
 .btn:active {
	 transform: translateY(0px);
	 padding: calc(13px * 0.95) calc(25px * 0.95);
	 box-shadow: inset 0px 2px 1px #02679e;
}
 .btn_transparent {
	 border: 0px;
	 border-radius: 0px;
	 padding: 13px 25px;
	 background-color: rgba(255, 255, 255, 0);
	 color: #fff;
	 box-shadow: none;
}
 .btn_transparent:hover {
	 box-shadow: none;
	 background-color: inherit;
}
 .btn_live {
	 padding-right: 22px;
}
 small {
	 position: absolute;
	 font-size: 0.9em;
	 color: rgba(255, 255, 255, 0.5);
	 bottom: 2rem;
}
 small b {
	 font-weight: bold;
	 color: rgba(255, 255, 255, 0.8);
	 z-index: -1;
}
 @media only screen and (max-width: 500px) {
	 .toolbar {
		 flex-direction: column;
		 padding-left: 50px;
		 padding-right: 50px;
	}
	 .btn {
		 width: 250px;
	}
	 span.live-icon {
		 position: absolute;
		 right: 20px;
	}
}
 @media only screen and (max-width: 350px) {
	 .btn {
		 width: 100%;
	}
}
 
